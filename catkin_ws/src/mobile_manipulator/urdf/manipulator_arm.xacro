<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- 
    MACRO: MANIPULATOR ARM
    A simple 3-DOF arm (Shoulder, Elbow, Wrist).
    Arguments:
      - parent: The link this arm attaches to (usually the chassis)
  -->
  <xacro:macro name="manipulator_arm" params="parent">

    <!-- 
      ARM BASE
      Fixed mount point on the robot chassis.
    -->
    <joint name="arm_base_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="arm_base_link"/>
      <origin xyz="0.15 0 0.05" rpy="0 0 0"/> <!-- Mounted slightly forward -->
    </joint>

    <link name="arm_base_link">
      <visual>
        <geometry>
          <cylinder radius="0.05" length="0.1"/>
        </geometry>
        <material name="gray">
          <color rgba="0.5 0.5 0.5 1"/>
        </material>
      </visual>
    </link>

    <!-- 
      LINK 1: SHOULDER (Rotates around Z - Pan)
    -->
    <link name="arm_link_1">
      <visual>
        <geometry>
          <box size="0.05 0.05 0.3"/>
        </geometry>
        <origin xyz="0 0 0.15" rpy="0 0 0"/> <!-- Visual offset so joint is at bottom -->
        <material name="orange">
          <color rgba="1 0.5 0 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.05 0.05 0.3"/>
        </geometry>
        <origin xyz="0 0 0.15" rpy="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.5"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
    </link>

    <joint name="shoulder_joint" type="revolute">
      <parent link="arm_base_link"/>
      <child link="arm_link_1"/>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="-3.14" upper="3.14" effort="10" velocity="1.0"/>
    </joint>

    <!-- 
      LINK 2: ELBOW (Rotates around Y - Tilt)
    -->
    <link name="arm_link_2">
      <visual>
        <geometry>
          <box size="0.05 0.05 0.25"/>
        </geometry>
        <origin xyz="0 0 0.125" rpy="0 0 0"/>
        <material name="orange"/>
      </visual>
      <collision>
        <geometry>
          <box size="0.05 0.05 0.25"/>
        </geometry>
        <origin xyz="0 0 0.125" rpy="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.4"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
    </link>

    <joint name="elbow_joint" type="revolute">
      <parent link="arm_link_1"/>
      <child link="arm_link_2"/>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
    </joint>

    <!-- 
      END EFFECTOR / GRIPPER
      Simple box representing a tool.
    -->
    <link name="gripper_link">
      <visual>
        <geometry>
          <box size="0.1 0.02 0.02"/>
        </geometry>
        <material name="red">
          <color rgba="1 0 0 1"/>
        </material>
      </visual>
    </link>

    <joint name="wrist_joint" type="revolute">
      <parent link="arm_link_2"/>
      <child link="gripper_link"/>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.57" upper="1.57" effort="5" velocity="1.0"/>
    </joint>

  </xacro:macro>
</robot>
